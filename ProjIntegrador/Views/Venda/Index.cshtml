@model IEnumerable<ProjIntegrador.Models.Venda>

<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div>
                        Vendas
                        <div class="page-title-subheading">
                            This is an example dashboard created using build-in elements and components.
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.ActionLink("Criar Novo", "Create", "Venda", null, new { @class = "btn-wide btn btn-success mb-3" })
            </div>
            <div class="col-md-12">
                <div class="main-card mb-3 card">
                    <div class="card-header">
                        Vendas Cadastradas
                    </div>
                    <div class="table-responsive">
                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">Cliente</th>
                                    <th class="text-center">Vendedor</th>
                                    <th class="text-center">Valor Total</th>
                                    <th class="text-center">Forma de Pagamento</th>
                                    <th class="text-center">Desconto</th>
                                    <th class="text-center">Data</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.Cliente.Nome)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.Vendedor.VendedorId)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.TotalVenda)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.FormaPagamento)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.ValorDesconto)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.DataVenda)
                                    </td>
                                    <td class="text-center">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.VendaId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.VendaId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.VendaId })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
