@model ProjIntegrador.Models.Venda

<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div>
                        Vendas
                        <div class="page-title-subheading">
                            This is an example dashboard created using build-in elements and components.
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.ActionLink("Voltar", "Index", "Venda", null, new { @class = "btn-wide btn btn-success mb-3" })
            </div>
            <div class="col-md-12">
                <div class="main-card mb-3 card">
                    <div class="card-header">
                        Deletar Venda
                    </div>
                    <br />

                    <div style="padding: 0 25px; margin: 10px 0;">
                        <div class="dl-horizontal">
                            <div class="col-md-3">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Cliente.Nome)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Cliente.Nome)
                                </dd>
                            </div>

                            <div class="col-md-3">
                                <dt>
                                    @Html.DisplayNameFor(model => model.VendedorId)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.VendedorId)
                                </dd>
                            </div>

                            <div class="col-md-3">
                                <dt>
                                    @Html.DisplayNameFor(model => model.TotalVenda)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.TotalVenda)
                                </dd>
                            </div>

                            <div class="col-md-3">
                                <dt>
                                    @Html.DisplayNameFor(model => model.FormaPagamento)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.FormaPagamento)
                                </dd>
                            </div>

                            <div class="col-md-3">
                                <dt>
                                    @Html.DisplayNameFor(model => model.ValorDesconto)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ValorDesconto)
                                </dd>
                            </div>

                            <div class="col-md-3">
                                <dt>
                                    @Html.DisplayNameFor(model => model.DataVenda)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.DataVenda)
                                </dd>
                            </div>

                        </div>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Deletar Venda" class="btn-wide btn btn-success mb-3" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
